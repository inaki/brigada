extends ../../layouts/default

include ../../mixins/meetup

block intro
	.page-intro: .container
		h1 Meetups
		p We usually meet up every tuesday. To stay in the loop, follow us on twitter.
		.buttons
			if !user
				a(href='/join').btn.btn-primary Join Code 4 Puerto Rico
			a(href="https://twitter.com/Code4PuertoRico", class="twitter-follow-button", data-show-count="true" data-size="large") Follow @code4puertorico


block content
	.container
		if meetups.upcoming.length
			each meetup in meetups.upcoming
				+meetup(meetup, 'present')
				if user && meetup.rsvpsAvailable
					.meetup-content
						a(href='/me').btn.btn-primary Attend

			hr.line-thick

		each meetup, i in meetups.past
			+meetup(meetup, 'past')

		if !meetups.upcoming.length && !meetups.past.length
			h3.text-muted There are no meetups yet.

block js
	// twitter
	script.
		!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
